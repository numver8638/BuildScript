#ifndef REPORT_ID
    #error "Cannot include 'ErrorReporter.ReportID.def' directly. Did you intend to include 'ErrorReporter.ReportID.h'?"
#endif // REPORT_ID

#define FATAL(id, msg)      REPORT_ID(BuildScript::Severity::Fatal, id, msg)
#define ERROR(id, msg)      REPORT_ID(BuildScript::Severity::Error, id, msg)
#define WARNING(id, msg)    REPORT_ID(BuildScript::Severity::Warning, id, msg)
#define NOTE(id, msg)       REPORT_ID(BuildScript::Severity::Note, id, msg)

// Compiler
FATAL(CompilerFileNotFound, "file not found.")
FATAL(CompilerCannotOpenFile, "cannot open file.")
FATAL(CompilerSourceIsNull, "invalid source text was given.")

// Semantic analyzer
ERROR(SemaCannotAssignToConstVariable, "cannot assign to const variable '{0}'.")
ERROR(SemaCannotAssignToConstField, "cannot assign to const field '{0}'.")
ERROR(SemaCannotAssignToReadOnlyProperty, "cannot assign to readonly property '{0}'.")
ERROR(SemaCannotAssignToValue, "cannot assign to value.")
ERROR(SemaCannotAssignToFunction, "cannot assign to function.")
ERROR(SemaCannotAssignToClass, "cannot assign to class.")
ERROR(SemaCannotAssignToMethod, "cannot assign to method.")
ERROR(SemaCannotReturn, "cannot return in script scope.")
ERROR(SemaCannotBreak, "cannot break out of loop.")
ERROR(SemaCannotContinue, "cannot continue out of loop.")
ERROR(SemaNonConstantInLabel, "not a constant in case label.")
ERROR(SemaInterpolatedStringInLabel, "interpolated string is not a constant.")
ERROR(SemaSelfInLabel, "'self' is not a constant.")
ERROR(SemaSuperInLabel, "'super' is not a constant.")
ERROR(SemaVariadicArguemntNotAllowedInOperator, "variadic argument is not allowed in operator.")
ERROR(SemaArgumentMismatchInOperator, "")

// Parser
ERROR(ParseExcessToken, "excess token '{0}'.")
ERROR(ParseExpectClassMember, "expect class-member.")
ERROR(ParseExpectExpression, "expect expression.")
ERROR(ParseExpectIdentifier, "expect identifier.")
ERROR(ParseExpectLabel, "expect label.")
ERROR(ParseExpectNewLine, "expect newline.")
ERROR(ParseExpectModifier, "expect modifier before class field name.")
ERROR(ParseExpectStatement, "more than one statements required after label(s).")
ERROR(ParseExpectString, "expect string.")
ERROR(ParseExpectTaskItem, "expect task-item.")
ERROR(ParseExpectToken, "expect token: '{0}'.")
ERROR(ParseNoTryHandler, "try statement has no except clause nor finally clause.")
ERROR(ParseNotAOperator, "'{0}' is not a operator.")
ERROR(ParseOmittedComma, "comma is omitted.")
ERROR(ParseOverflowFloat, "float overflow.")
ERROR(ParseOverflowInteger, "integer overflow.")
ERROR(ParseRedundantKeyword, "redundant keyword: '{0}'.")
ERROR(ParseModifierNotAllowed, "{0} is not allowed in {1}.")
ERROR(ParseUnderflowFloat, "float underflow.")
ERROR(ParseUnexpectedEOF, "unexpected end of file.")
NOTE(ParseOverrideCompare, "override Compare(_,_) method rather than declare 'def {0}'.")
NOTE(ParseOverrideEquals, "override Equals(_) method rather than declare 'def {0}'.")
WARNING(ParseReversedExtendsClause, "order of 'extends' and 'dependsOn' clause are reversed.")
WARNING(ParseReversedStaticKeyword, "order of 'static' and 'def' are reversed.")

// Lexer
ERROR(LexCommentInInterpolatedString, "comment in an interpolated string is not allowed.")
ERROR(LexIncompleteBinary, "incomplete binary literal.")
ERROR(LexIncompleteEscape, "incomplete escape sequence.")
ERROR(LexIncompleteExponent, "incomplete exponent.")
ERROR(LexIncompleteHex, "incomplete hexadecimal literal.")
ERROR(LexIncompleteOctal, "incomplete octal literal.")
ERROR(LexInvalidCharacter, "invalid character.")
ERROR(LexInvalidEncoding, "found not decodable byte sequence with encoding '{0}'.")
ERROR(LexInvalidEscape, "invalid escape character.")
ERROR(LexInvalidInterpolation, "expected identifier or '{' after '$'.")
ERROR(LexNotAllowedCharacter, "not allowed unicode character used.")
ERROR(LexUnexpectedEOS, "unexpected end of string.")
ERROR(LexUnknownToken, "unknown token.")
ERROR(LexIntendedToEllipsis, "unknown token; did you intend to '...'?")
ERROR(LexIntendedToNotEqual, "unknown token; did you intend to '!='?")

#undef NOTICE
#undef WARNING
#undef ERROR
#undef FATAL